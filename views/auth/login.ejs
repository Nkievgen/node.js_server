<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/login.css"> 
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/message.ejs') %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" name="email" id="email" value="<%= savedEmail %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                type="password" name="password" id="password">
            </div>
            <input type ="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href = "/password-reset">Password reset</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>